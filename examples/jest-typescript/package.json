{
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "jest": "*",
    "js-given": "^0.1.0",
    "typescript": "*"
  },
  "scripts": {
    "build": "tsc --project . --pretty",
    "pretest": "yarn build",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx|js)"
    ]
  }
}
